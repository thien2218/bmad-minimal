{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bmad.ai/schemas/data.schema.json",
  "title": "BMAD Data Schema",
  "description": "Schema for data YAML files used by BMAD agents",
  "type": "object",
  "required": ["id", "title", "version", "type", "content"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file (for validation)",
      "const": "../schemas/data.schema.json"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the data file",
      "pattern": "^[a-z0-9-]+$",
      "examples": ["technical-preferences", "test-levels-framework", "coding-standards"]
    },
    "title": {
      "type": "string",
      "description": "Human-readable title",
      "minLength": 1,
      "maxLength": 200
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the data",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0", "2.1.3"]
    },
    "description": {
      "type": "string",
      "description": "Description of what this data represents and how it's used"
    },
    "type": {
      "type": "string",
      "description": "Type of data content",
      "enum": [
        "preferences",
        "framework",
        "standards",
        "configuration",
        "reference",
        "matrix",
        "rules",
        "glossary",
        "other"
      ]
    },
    "category": {
      "type": "string",
      "description": "Category of the data",
      "enum": ["technical", "process", "quality", "documentation", "testing", "architecture", "other"]
    },
    "scope": {
      "type": "string",
      "description": "Scope of applicability",
      "enum": ["global", "project", "team", "agent", "phase"],
      "default": "project"
    },
    "content": {
      "description": "The actual data content - structure varies by type",
      "oneOf": [
        {
          "type": "object",
          "title": "Preferences Content",
          "properties": {
            "preferences": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "value": {},
                  "rationale": {
                    "type": "string"
                  },
                  "priority": {
                    "type": "string",
                    "enum": ["required", "preferred", "optional"]
                  },
                  "alternatives": {
                    "type": "array",
                    "items": {}
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "title": "Framework Content",
          "properties": {
            "framework": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "version": {
                  "type": "string"
                },
                "components": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "required": {
                        "type": "boolean"
                      }
                    }
                  }
                },
                "levels": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "level": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "criteria": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "title": "Standards Content",
          "properties": {
            "standards": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "title", "requirement"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "requirement": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "severity": {
                    "type": "string",
                    "enum": ["must", "should", "may"]
                  },
                  "examples": {
                    "type": "object",
                    "properties": {
                      "good": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "bad": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "rationale": {
                    "type": "string"
                  },
                  "exceptions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "title": "Matrix Content",
          "properties": {
            "matrix": {
              "type": "object",
              "properties": {
                "dimensions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "values": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "cells": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "coordinates": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      },
                      "value": {},
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "title": "Rules Content",
          "properties": {
            "rules": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "condition", "action"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "condition": {
                    "type": "string"
                  },
                  "action": {
                    "type": "string"
                  },
                  "severity": {
                    "type": "string",
                    "enum": ["error", "warning", "info"]
                  },
                  "category": {
                    "type": "string"
                  },
                  "exceptions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "title": "Glossary Content",
          "properties": {
            "terms": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["term", "definition"],
                "properties": {
                  "term": {
                    "type": "string"
                  },
                  "definition": {
                    "type": "string"
                  },
                  "abbreviation": {
                    "type": "string"
                  },
                  "synonyms": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "category": {
                    "type": "string"
                  },
                  "examples": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "see_also": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "title": "Generic Content",
          "additionalProperties": true
        }
      ]
    },
    "usage": {
      "type": "object",
      "description": "How this data should be used",
      "properties": {
        "agents": {
          "type": "array",
          "description": "Which agents use this data",
          "items": {
            "type": "string",
            "enum": ["dev", "qa", "pdm", "all"]
          }
        },
        "phases": {
          "type": "array",
          "description": "Which phases this applies to",
          "items": {
            "type": "string"
          }
        },
        "tasks": {
          "type": "array",
          "description": "Tasks that reference this data",
          "items": {
            "type": "string"
          }
        },
        "load_when": {
          "type": "string",
          "description": "When to load this data",
          "enum": ["always", "on_demand", "phase_start", "task_start"],
          "default": "on_demand"
        }
      }
    },
    "validation": {
      "type": "object",
      "description": "Validation rules for this data",
      "properties": {
        "schema": {
          "type": "string",
          "description": "Additional schema to validate content against"
        },
        "required_fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "field": {
                "type": "string"
              },
              "constraint": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "author": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "lastModified": {
          "type": "string",
          "format": "date"
        },
        "source": {
          "type": "string",
          "description": "Source of this data (e.g., URL, document reference)"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deprecated": {
          "type": "boolean",
          "default": false
        },
        "superseded_by": {
          "type": "string",
          "description": "ID of data that supersedes this"
        }
      }
    }
  }
}
