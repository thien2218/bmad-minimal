{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://bmad.ai/schemas/agent.schema.json",
	"title": "Agent Config Schema",
	"description": "Schema for agent JSON configuration",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"version",
		"precedence",
		"policy",
		"persona",
		"activation",
		"workflow",
		"commandPrefix",
		"commands",
		"rules"
	],
	"properties": {
		"version": {
			"type": "string"
		},
		"precedence": {
			"type": "array",
			"items": {
				"type": "string",
				"enum": [
					"policy",
					"rules.hard",
					"commands",
					"activation",
					"workflow",
					"rules.soft",
					"persona",
					"customizations"
				]
			},
			"minItems": 7,
			"maxItems": 8
		},
		"policy": {
			"type": "object",
			"additionalProperties": false,
			"required": [
				"canOverrideBaseBehavior",
				"overrideScope",
				"onOverrideAttempt"
			],
			"properties": {
				"canOverrideBaseBehavior": {
					"type": "string"
				},
				"overrideScope": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"onOverrideAttempt": {
					"type": "string"
				}
			}
		},
		"persona": {
			"type": "object",
			"additionalProperties": false,
			"required": ["agent", "style", "corePrinciples"],
			"properties": {
				"agent": {
					"type": "object",
					"additionalProperties": false,
					"required": ["name", "id", "title", "description", "icon"],
					"properties": {
						"name": {
							"type": "string"
						},
						"id": {
							"type": "string"
						},
						"title": {
							"type": "string"
						},
						"description": {
							"type": "string"
						},
						"icon": {
							"type": "string"
						}
					}
				},
				"style": {
					"type": "object",
					"additionalProperties": false,
					"required": ["tone", "verbosity", "focus"],
					"properties": {
						"tone": {
							"type": "string"
						},
						"verbosity": {
							"type": "string"
						},
						"focus": {
							"type": "string"
						}
					}
				},
				"corePrinciples": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		},
		"activation": {
			"type": "object",
			"additionalProperties": false,
			"required": ["preconditions", "initialActions"],
			"properties": {
				"preconditions": {
					"type": "object",
					"additionalProperties": false,
					"required": ["loadAlwaysFiles", "onMissingFiles"],
					"properties": {
						"loadAlwaysFiles": {
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						"onMissingFiles": {
							"type": "string"
						}
					}
				},
				"initialActions": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		},
		"workflow": {
			"type": "object",
			"additionalProperties": false,
			"required": ["resolvePaths", "elicitDefaults", "onMissingDependency"],
			"properties": {
				"resolvePaths": {
					"type": "object",
					"additionalProperties": false,
					"required": [
						"strategy",
						"basePath",
						"folderTypes",
						"pattern",
						"fileLoadStrategy",
						"loadPolicy",
						"onUnresolvablePath"
					],
					"properties": {
						"strategy": {
							"type": "string"
						},
						"basePath": {
							"type": "string"
						},
						"folderTypes": {
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						"pattern": {
							"type": "string"
						},
						"fileLoadStrategy": {
							"type": "string"
						},
						"loadPolicy": {
							"type": "string"
						},
						"onUnresolvablePath": {
							"type": "string"
						},
						"examples": {
							"type": "array",
							"items": {
								"type": "object",
								"additionalProperties": false,
								"properties": {
									"userPhrase": {
										"type": "string"
									},
									"action": {
										"type": "string"
									},
									"targets": {
										"type": "array",
										"items": {
											"type": "string"
										}
									}
								}
							}
						}
					}
				},
				"elicitDefaults": {
					"type": "object",
					"additionalProperties": false,
					"required": [
						"elicitRequired",
						"responseFormat",
						"allowedResponseFormats"
					],
					"properties": {
						"elicitRequired": {
							"type": "boolean"
						},
						"responseFormat": {
							"type": "string"
						},
						"allowedResponseFormats": {
							"type": "array",
							"items": {
								"type": "string"
							}
						}
					}
				},
				"onMissingDependency": {
					"type": "string"
				}
			}
		},
		"commandPrefix": {
			"type": "string"
		},
		"commands": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": ["name", "description"],
				"properties": {
					"name": {
						"type": "string"
					},
					"system": {
						"type": "boolean"
					},
					"description": {
						"type": "string"
					},
					"parameters": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"optionalParameters": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"targets": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				}
			}
		},
		"rules": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": ["id", "title", "severity", "actionOnViolation"],
				"properties": {
					"id": {
						"type": "string"
					},
					"title": {
						"type": "string"
					},
					"enforcements": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"severity": {
						"type": "string"
					},
					"actionOnViolation": {
						"type": "string"
					}
				}
			}
		}
	}
}
