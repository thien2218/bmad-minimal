{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://bmad.ai/schemas/checklist.schema.json",
	"title": "Checklist Schema",
	"description": "Schema for structured checklist definitions used by BMAD agents",
	"type": "object",
	"required": ["id", "title", "purpose", "agent", "sections"],
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"description": "Reference to this schema file (for validation)",
			"const": "../../.internal/checklist.schema.json"
		},
		"id": {
			"type": "string",
			"description": "Unique identifier for the checklist",
			"pattern": "^[a-z0-9-]+$",
			"examples": ["story-dod-checklist", "pdm-checklist"]
		},
		"title": {
			"type": "string",
			"description": "Human-readable checklist title",
			"minLength": 1,
			"maxLength": 50
		},
		"purpose": {
			"type": "string",
			"description": "Brief description of what the checklist validates",
			"minLength": 1,
			"maxLength": 100
		},
		"agent": {
			"type": "string",
			"description": "Primary agent responsible for executing the checklist",
			"enum": ["dev", "qa", "pdm", "analyst", "architect", "scrum-master"]
		},
		"context": {
			"type": "object",
			"description": "Optional applicability hints for project types or modalities",
			"properties": {
				"project_type": {
					"type": "string",
					"enum": ["greenfield", "brownfield", "mixed"]
				},
				"ui_presence": {
					"type": "string",
					"enum": ["required", "optional", "none"]
				},
				"notes": {
					"type": "string"
				}
			}
		},
		"init_instructions": {
			"type": "string",
			"description": "Initialization instructions for the LLM agent"
		},
		"report_instructions": {
			"type": "string",
			"description": "Guidance on final summaries or handoffs"
		},
		"sections": {
			"type": "array",
			"description": "Ordered list of checklist sections",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": ["id", "title", "items"],
				"additionalProperties": false,
				"properties": {
					"id": {
						"type": "string",
						"pattern": "^[A-Z-]+$"
					},
					"title": {
						"type": "string"
					},
					"llm_hint": {
						"type": "string",
						"description": "Guidance or mindset for this section"
					},
					"required": {
						"type": "boolean",
						"description": "Whether this section must be executed"
					},
					"items": {
						"type": "array",
						"minItems": 1,
						"items": {
							"$ref": "#/definitions/item"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"item": {
			"type": "object",
			"required": ["text"],
			"additionalProperties": false,
			"properties": {
				"text": {
					"type": "string",
					"description": "Checklist item text"
				},
				"condition": {
					"type": "string",
					"description": "Condition for including this item"
				},
				"subItems": {
					"type": "array",
					"description": "Nested checklist items",
					"items": {
						"type": "object",
						"required": ["text"],
						"additionalProperties": false,
						"properties": {
							"text": {
								"type": "string",
								"description": "Checklist item text"
							},
							"condition": {
								"type": "string",
								"description": "Condition for including this item"
							}
						}
					}
				}
			}
		}
	}
}
