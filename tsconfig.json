{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
